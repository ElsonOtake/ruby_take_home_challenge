<% if user_signed_in? %>
  <%= button_to('Logout', destroy_user_session_path, method: :delete, class: 'button--logout') %>
<% else %>
  <%= link_to('Login', new_user_session_path, class: 'button--logout') %>
<% end %>
<h1>Hello <%= current_user.email %></h1>
<p>Please find list of your monitored wallets attached</p>
<table>
  <thead>
    <tr>
      <th>Wallet address</th>
      <th>Number of transactions</th>
      <th>Balance</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @address_list.each do |item| %>
      <tr>
        <td><%= item[:account] %></td>
        <td><%= item[:numtx] %></td>
        <td><%= item[:balance].to_f / 10.pow(18) %> ETH</td>
        <td>
          <%= link_to 'Show', wallets_show_path({address: item[:account], numtx: item[:numtx], balance: item[:balance]}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Wallet', wallets_new_path, class: 'button' %>
